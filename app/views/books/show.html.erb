<p id="notice"><%= notice %></p>
<div class="jumbotron">
  <h1 class="display-4">
    <%= @book.Book_Title %>
  </h1>
  <p class="lead">
    <%= @book.Book_ID %>  | 
    <%= @book.Author %>  |
    <%= @book.Publishers %>|  
    <%= @book.Year %>

  </p>
